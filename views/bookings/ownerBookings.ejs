<%- layout("/layouts/boilerplate") %>

<div class="container mt-4">
  <h2>Manage Bookings for My Listings</h2>
  <p class="text-muted">Review and manage booking requests for your properties</p>
  
  <!-- Filter Tabs -->
  <ul class="nav nav-tabs mb-3" id="bookingTabs" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all" type="button" role="tab">
        All Bookings
      </button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button" role="tab">
        Pending
      </button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="confirmed-tab" data-bs-toggle="tab" data-bs-target="#confirmed" type="button" role="tab">
        Confirmed
      </button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="rejected-tab" data-bs-toggle="tab" data-bs-target="#rejected" type="button" role="tab">
        Rejected
      </button>
    </li>
  </ul>
  <br>

  <% if(bookings.length === 0) { %>
    <div class="alert alert-info">
      <p>No bookings for your listings yet.</p>
      <a href="/listings" class="btn btn-primary">View Your Listings</a>
    </div>
  <% } else { %>
    <div class="tab-content" id="bookingTabContent">
      <!-- All Bookings Tab -->
      <div class="tab-pane fade show active" id="all" role="tabpanel">
        <%- include('partials/bookingTable', { bookings: bookings, filter: 'all' }) %>
      </div>
      <!-- Pending Bookings Tab -->
      <div class="tab-pane fade" id="pending" role="tabpanel">
        <% const pendingBookings = bookings.filter(b => b.status === 'pending'); %>
        <%- include('partials/bookingTable', { bookings: pendingBookings, filter: 'pending' }) %>
      </div>
      <!-- Confirmed Bookings Tab -->
      <div class="tab-pane fade" id="confirmed" role="tabpanel">
        <% const confirmedBookings = bookings.filter(b => b.status === 'confirmed'); %>
        <%- include('partials/bookingTable', { bookings: confirmedBookings, filter: 'confirmed' }) %>
      </div>
      <!-- Rejected Bookings Tab -->
      <div class="tab-pane fade" id="rejected" role="tabpanel">
        <% const rejectedBookings = bookings.filter(b => b.status === 'rejected'); %>
        <%- include('partials/bookingTable', { bookings: rejectedBookings, filter: 'rejected' }) %>
      </div>
    </div>
  <% } %>
</div>

<!-- Booking Table Partial -->
<% function include(partialPath, data) { %>
  <% const { bookings: filteredBookings, filter } = data; %>
  <% if(filteredBookings.length === 0) { %>
    <div class="alert alert-info">
      No <%= filter === 'all' ? '' : filter %> bookings found.
    </div>
  <% } else { %>
    <!-- Desktop Table View -->
    <div class="d-none d-lg-block">
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="table-dark">
            <tr>
              <th>Customer</th>
              <th>Listing</th>
              <th>Check-in</th>
              <th>Check-out</th>
              <th>Guests</th>
              <th>Total Price</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% for(let booking of filteredBookings) { %>
              <% if(booking.listing && booking.customer) { %>
              <tr>
                <td>
                  <strong><%= booking.customer.username %></strong><br>
                  <small><%= booking.customer.email %></small>
                </td>
                <td>
                  <a href="/listings/<%= booking.listing._id %>">
                    <%= booking.listing.title %>
                  </a><br>
                  <small><%= booking.listing.location %></small>
                </td>
                <td><%= new Date(booking.checkIn).toLocaleDateString() %></td>
                <td><%= new Date(booking.checkOut).toLocaleDateString() %></td>
                <td><%= booking.guests %></td>
                <td>₹<%= booking.totalPrice.toLocaleString("en-IN") %></td>
                <td>
                  <% if(booking.status === 'pending') { %>
                    <span class="badge bg-warning text-dark">Pending</span>
                  <% } else if(booking.status === 'confirmed') { %>
                    <span class="badge bg-success">Confirmed</span>
                  <% } else { %>
                    <span class="badge bg-danger">Rejected</span>
                  <% } %>
                </td>
                <td>
                  <% if(booking.status === 'pending') { %>
                    <form action="/bookings/<%= booking._id %>/owner-confirm" method="POST" style="display: inline;" onsubmit="return confirm('Confirm this booking?')">
                      <button class="btn btn-sm btn-success" title="Confirm Booking">
                        <i class="fa-solid fa-check"></i> Confirm
                      </button>
                    </form>
                    <form action="/bookings/<%= booking._id %>/owner-reject" method="POST" style="display: inline;" onsubmit="return confirm('Reject this booking?')">
                      <button class="btn btn-sm btn-danger" title="Reject Booking">
                        <i class="fa-solid fa-times"></i> Reject
                      </button>
                    </form>
                  <% } else if(booking.status === 'confirmed') { %>
                    <a href="/chat/booking/<%= booking._id %>" class="btn btn-sm btn-primary" title="Chat with Customer">
                      <i class="fa-solid fa-comments"></i> Chat
                    </a>
                  <% } else { %>
                    <span class="text-muted">No action needed</span>
                  <% } %>
                </td>
              </tr>
              <% } %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
    
    <!-- Mobile Card View -->
    <div class="d-lg-none">
      <% for(let booking of filteredBookings) { %>
        <% if(booking.listing && booking.customer) { %>
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title"><%= booking.listing.title %></h5>
            <h6 class="card-subtitle mb-2 text-muted">
              <i class="fa-solid fa-user"></i> <%= booking.customer.username %>
            </h6>
            <p class="card-text">
              <strong>Email:</strong> <%= booking.customer.email %><br>
              <strong>Location:</strong> <%= booking.listing.location %><br>
              <strong>Check-in:</strong> <%= new Date(booking.checkIn).toLocaleDateString() %><br>
              <strong>Check-out:</strong> <%= new Date(booking.checkOut).toLocaleDateString() %><br>
              <strong>Guests:</strong> <%= booking.guests %><br>
              <strong>Total:</strong> ₹<%= booking.totalPrice.toLocaleString("en-IN") %>
            </p>
            <p>
              <% if(booking.status === 'pending') { %>
                <span class="badge bg-warning text-dark">Pending</span>
              <% } else if(booking.status === 'confirmed') { %>
                <span class="badge bg-success">Confirmed</span>
              <% } else { %>
                <span class="badge bg-danger">Rejected</span>
              <% } %>
            </p>
            <% if(booking.status === 'pending') { %>
              <div class="d-grid gap-2">
                <form action="/bookings/<%= booking._id %>/owner-confirm" method="POST" onsubmit="return confirm('Confirm this booking?')">
                  <button class="btn btn-success w-100">
                    <i class="fa-solid fa-check"></i> Confirm Booking
                  </button>
                </form>
                <form action="/bookings/<%= booking._id %>/owner-reject" method="POST" onsubmit="return confirm('Reject this booking?')">
                  <button class="btn btn-danger w-100">
                    <i class="fa-solid fa-times"></i> Reject Booking
                  </button>
                </form>
              </div>
            <% } else if(booking.status === 'confirmed') { %>
              <a href="/chat/booking/<%= booking._id %>" class="btn btn-primary w-100">
                <i class="fa-solid fa-comments"></i> Chat with Customer
              </a>
            <% } else { %>
              <p class="text-muted mb-0">No action needed</p>
            <% } %>
          </div>
        </div>
        <% } %>
      <% } %>
    </div>
  <% } %>
<% } %>
</div>
