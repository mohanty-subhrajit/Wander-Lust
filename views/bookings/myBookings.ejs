<%- layout("/layouts/boilerplate") %>

<div class="container mt-4">
  <h2>My Bookings</h2>
  <br>

  <% if(bookings.length === 0) { %>
    <div class="alert alert-info">
      <p>You haven't made any bookings yet.</p>
      <a href="/listings" class="btn btn-primary">Browse Listings</a>
    </div>
  <% } else { %>
    <div class="row">
      <% for(let booking of bookings) { %>
        <% if(booking.listing) { %>
        <div class="col-12 col-md-6 mb-4">
          <div class="card">
            <% if(booking.listing.image && booking.listing.image.url) { %>
              <img src="<%= booking.listing.image.url %>" class="card-img-top" alt="<%= booking.listing.title %>" style="height: 200px; object-fit: cover;">
            <% } else { %>
              <img src="https://via.placeholder.com/400x200?text=No+Image" class="card-img-top" alt="No Image" style="height: 200px; object-fit: cover;">
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= booking.listing.title %></h5>
              <p class="card-text">
                <i class="fa-solid fa-location-dot"></i> <%= booking.listing.location %>, <%= booking.listing.country %>
              </p>
              <p class="card-text">
                <strong>Check-in:</strong> <%= new Date(booking.checkIn).toLocaleDateString() %><br>
                <strong>Check-out:</strong> <%= new Date(booking.checkOut).toLocaleDateString() %><br>
                <strong>Guests:</strong> <%= booking.guests %><br>
                <strong>Total Price:</strong> ₹<%= booking.totalPrice.toLocaleString("en-IN") %>
              </p>
              
              <% if(booking.status === 'pending') { %>
                <span class="badge bg-warning text-dark">Pending Confirmation</span>
                <p class="text-muted mt-2"><small>Waiting for owner/admin approval</small></p>
                <form action="/bookings/<%= booking._id %>?_method=DELETE" method="POST" class="mt-3" onsubmit="return confirm('Are you sure you want to cancel this booking?')">
                  <button class="btn btn-sm btn-danger">Cancel Booking</button>
                </form>
              <% } else if(booking.status === 'confirmed') { %>
                <span class="badge bg-success">Confirmed</span>
                <p class="text-success mt-2"><small><i class="fa-solid fa-check-circle"></i> Your booking is confirmed!</small></p>
                <a href="/chat/booking/<%= booking._id %>" class="btn btn-primary btn-sm mt-2">
                  <i class="fa-solid fa-comments"></i> Chat with Owner
                </a>
              <% } else if(booking.status === 'rejected') { %>
                <span class="badge bg-danger">Rejected</span>
                <p class="text-danger mt-2"><small>Your booking was not approved. Please book another listing.</small></p>
                <a href="/listings" class="btn btn-primary btn-sm">Browse Listings</a>
              <% } %>
            </div>
          </div>
        </div>
        <% } else { %>
        <div class="col-12 col-md-6 mb-4">
          <div class="card border-danger">
            <div class="card-body">
              <h5 class="card-title text-danger"><i class="fa-solid fa-exclamation-triangle"></i> Listing Deleted</h5>
              <p class="card-text">This listing has been removed by the owner or admin.</p>
              <p class="card-text">
                <strong>Check-in:</strong> <%= new Date(booking.checkIn).toLocaleDateString() %><br>
                <strong>Check-out:</strong> <%= new Date(booking.checkOut).toLocaleDateString() %><br>
                <strong>Guests:</strong> <%= booking.guests %><br>
                <strong>Total Price:</strong> ₹<%= booking.totalPrice.toLocaleString("en-IN") %>
              </p>
              <span class="badge bg-secondary">Listing No Longer Available</span>
              <br>
              <a href="/listings" class="btn btn-primary btn-sm mt-2">Browse Other Listings</a>
            </div>
          </div>
        </div>
        <% } %>
      <% } %>
    </div>
  <% } %>
</div>
