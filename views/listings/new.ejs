<%-layout("/layouts/boilerplate")%>
<div class="row ">
<div class="col-8 offset-2">
  <body>
    <br><br>
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
        <label for="title" class="form-label">Title</label>
      <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required />
          <div class="valid-feedback">Title looks good</div>
          <div class="invalid-feedback">Please Give a Title</div>
        </div>
    
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
        name="listing[description]"
        placeholder="enter description" class="form-control"  required
      ></textarea>
      <div class="valid-feedback">descripction looks good</div>
          <div class="invalid-feedback">Please  Enter Descripction</div>
      </div>
     

     <div class="mb-3">
          <label for="image" class="form-label">Upload Image </label>
         <input
        name="listing[image]"
       class="form-control" 
        type="file"
        required
         
      />
      
          <div class="invalid-feedback"> Default Imgae will be set</div>
     </div>

     <div class="row">
         <div class="mb-3 col-md-4">
      <label for="price" class="form-label">Price (₹ per night)</label>
      <input name="listing[price]" placeholder="Min ₹300" type="number" class="form-control" min="300" required/>
      <div class="valid-feedback">price looks good</div>
          <div class="invalid-feedback">Price must be at least ₹300</div>
      </div>
      
      <div class="mb-3 col-md-8">
        <label for="country" class="form-label">Country</label>
        <input name="listing[country]" placeholder="India" type="text"  class="form-control"  required/>
        <div class="valid-feedback"></div>
          <div class="invalid-feedback">Please enter a country name</div>

      </div>
     </div>
     
      
      
     <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
        name="listing[location]"
        placeholder="Bhubaneswar"
        type="text"
        class="form-control"
        required
      />
      <div class="valid-feedback">Location looks good</div>
          <div class="invalid-feedback">Please give a location</div>
     </div>

     <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <select name="listing[category]" class="form-select" required>
          <option value="" selected disabled>Select a category</option>
          <option value="Trending">Trending</option>
          <option value="Rooms">Rooms</option>
          <option value="Iconic cities">Iconic Cities</option>
          <option value="mountains">Mountains</option>
          <option value="castles">Castles</option>
          <option value="Amazing Pools">Amazing Pools</option>
          <option value="camping">Camping</option>
          <option value="farms">Farms</option>
          <option value="Arctic">Arctic</option>
          <option value="Boats House">Boats House</option>
        </select>
        <div class="valid-feedback">Category looks good</div>
        <div class="invalid-feedback">Please select a category</div>
     </div>
      
      
      <button class="btn btn-dark add-btn" type="submit">Add</button>
      <br><br><br>
    </form>

    
  </body>
  </div>
</div>